<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shopping_App.LoginPage"
             Title="SHOP">

    <VerticalStackLayout Padding="30" Spacing="10">


        <!--<Ellipse Fill="LightBlue" WidthRequest="200" HeightRequest="200" />-->

        <Frame 
  HeightRequest="200" 
  WidthRequest="200"
  CornerRadius="20"  HorizontalOptions="Center" Margin="0,30,0,20"
  VerticalOptions="Center"
  IsClippedToBounds="True">
  <Image 
    Aspect="Fill" Source="https://www.indiafilings.com/learn/wp-content/uploads/2023/03/How-can-I-register-my-shop-and-establishment-online.jpg" />
</Frame>


        <Label Text="ProMarket" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" Margin="30,20,30,0" />

        <Entry x:Name="PasswordEntry" Placeholder="Password" Margin="30,10,30,0" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" Margin="30,20,30,0" />




    </VerticalStackLayout>
</ContentPage>