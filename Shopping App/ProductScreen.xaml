<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shopping_App.ProductScreen"
             Title="Product List">

<Grid>
    <ListView ItemsSource="{Binding Items}" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              <Image Grid.Column="0" WidthRequest="130" HeightRequest="130" Aspect="AspectFit" Source="{Binding ImageUrl}" />
              <StackLayout Grid.Column="1" Margin="20,20,0,0">
                <Label Text="{Binding Name}" FontSize="16" />
                <Label Text="{Binding Price, StringFormat='₹{0:F2}'}" TextColor="Gray" />
              </StackLayout>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</ContentPage>